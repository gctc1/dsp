#include "stdio.h"
int main()
{
int i=0,count=0;
char a[100];
printf("enter the bits : ");
scanf("%s",a);
printf("\nAfter bit stuffing \n");
printf("01111110");
for(i=0;a[i]; i++)
{
if(a[i]=='1')
count++;
else
count=0;
printf("%c",a[i]);
if(count==5)
{
printf("0");
count=0;
}
}
printf("01111110");
return 1;
}
/*
enter the bits : 0100111111001
After bit stuffing 
011111100100111110100101111110
*/
